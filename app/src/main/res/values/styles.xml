<resources>
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@drawable/background_gradient</item>
    </style>

    <style name="AppTheme.Splash">
        <item name="android:windowBackground">@drawable/splash_background</item>
    </style>

    <style name="MyDialogTheme" parent="android:Theme.Dialog">
        <item name="android:windowBackground">@color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
    </style>

    <style name="SuccessToast">
        <item name="stColorBackground">@color/colorAccent</item>
        <item name="stTextColor">@color/text_white</item>
        <item name="stFont">@font/amiko</item>
        <item name="stTextSize">16sp</item>
        <item name="stLength">LONG</item>
    </style>

    <style name="FailToast">
        <item name="stColorBackground">@color/color_error</item>
        <item name="stTextColor">@color/text_white</item>
        <item name="stFont">@font/amiko</item>
        <item name="stTextSize">16sp</item>
        <item name="stLength">LONG</item>
    </style>
</resources>
